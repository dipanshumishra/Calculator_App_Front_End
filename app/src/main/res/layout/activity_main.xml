<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:gravity="center"
        android:padding="8dp"
        android:text="!! CALCULATOR !!"
        android:textColor="#000"
        android:textSize="23dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#393636"
        android:textSize="40dp"
        android:text="7*2"
        android:gravity="right"
        android:paddingRight="20dp"
        android:layout_above="@id/outPuttxt"
        android:id="@+id/inputTxt"/>


    <TextView
        android:id="@+id/outPuttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scient"
        android:gravity="right"
        android:paddingRight="20dp"
        android:text="14"
        android:textColor="@color/black"
        android:textSize="90dp" />

    <LinearLayout
        android:id="@id/scient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons"
        android:background="#7A7474"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/sin"
                tools:ignore="RtlCompat"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/cos"
                android:layout_height="30dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/tan"
                android:layout_height="30dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/log"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="-10dp"
                android:background="@drawable/ln"
                android:layout_height="30dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/openb"
                tools:ignore="RtlCompat"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/closeb"
                android:layout_height="30dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/pow"
                android:layout_height="30dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/root"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="-10dp"
                android:background="@drawable/exclaim"
                android:layout_height="30dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/pie"
                tools:ignore="RtlCompat"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/e"
                android:layout_height="30dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/inv"
                android:layout_height="30dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/rad"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="-10dp"
                android:background="@drawable/deg"
                android:layout_height="30dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/seven"
                android:layout_height="50dp"
                android:layout_marginEnd="45dp"
                android:visibility="invisible"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/btn_ac"
                android:layout_width="50dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/ac"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/btn_module"
                android:layout_width="50dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/module"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/btn_c"
                android:layout_width="50dp"
                android:background="@drawable/c"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_seven"
                android:layout_width="50dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/seven"
                android:layout_height="50dp"
                android:layout_marginEnd="45dp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/btn_eight"
                android:layout_width="50dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/eight"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/btn_nine"
                android:layout_width="50dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/nine"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/btn_x"
                android:layout_width="50dp"
                android:background="@drawable/product"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_four"
                android:layout_width="50dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/four"
                android:layout_height="50dp"
                android:layout_marginEnd="45dp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/btn_five"
                android:layout_width="50dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/five"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/btn_six"
                android:layout_width="50dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/six"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/btn_minus"
                android:layout_width="50dp"
                android:background="@drawable/minus"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_one"
                android:layout_width="50dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/one"
                android:layout_height="50dp"
                android:layout_marginEnd="45dp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/btn_two"
                android:layout_width="50dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/two"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/btn_three"
                android:layout_width="50dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/three"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="50dp"
                android:background="@drawable/plus"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_invis"
                android:layout_width="70dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/eight"
                android:layout_height="70dp"
                android:visibility="invisible"
                android:layout_marginEnd="45dp"
                tools:ignore="RtlCompat" />

             <ImageView
                 android:id="@+id/btn_zero"
             android:layout_width="50dp"
                 android:layout_marginRight="45dp"
                 android:background="@drawable/zero"
                 android:layout_height="50dp"/>

             <ImageView
                 android:id="@+id/btn_dot"
             android:layout_width="50dp"
                 android:layout_marginRight="45dp"
                 android:background="@drawable/dot"
                 android:layout_marginBottom="5dp"
                 android:layout_height="60dp"/>

             <ImageView
                 android:id="@+id/btn_equal"
             android:layout_width="50dp"
                 android:background="@drawable/equal"

                 android:layout_marginRight="20dp"
                 android:layout_height="50dp"/>
        </LinearLayout>

   </LinearLayout>

</RelativeLayout>